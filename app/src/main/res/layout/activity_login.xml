<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    >




    <TextView
        android:text="IP登录连接"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:textSize="@dimen/large_text_size"
        android:id="@+id/textView5" />

    <TextView
        android:text="IP地址："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginTop="19dp"
        android:id="@+id/textView6" />

    <EditText
        android:background="@drawable/common_border_shape"
        android:padding="@dimen/small_container_padding"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="192.168.2.198"
        android:id="@+id/et_ip"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <EditText
        android:padding="@dimen/small_container_padding"
        android:layout_marginTop="@dimen/common_container_padding"
        android:background="@drawable/common_border_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="8080"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:id="@+id/et_con" />

    <TextView
        android:layout_marginTop="@dimen/common_container_padding"

        android:text="端口号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/et_con"
        android:layout_alignBottom="@+id/et_con"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:text="连接"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_con"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/button2" />
</RelativeLayout>